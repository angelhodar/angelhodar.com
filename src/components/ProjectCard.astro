---
import { Icon } from "astro-icon"

const { title, href, description } = Astro.props;
---

<div class="flex flex-col rounded-lg shadow-xl p-4 space-y-2 border-gray-300 border">
    <div class="flex flex-row space-x-3 items-center">
        <h2 class="text-2xl font-semibold">{title}</h2>
        <a href={href} target="_blank" rel="noopener noreferer"
            ><Icon name="github" class="w-6 h-6"></a
        >
    </div>
    <p class="text-lg">{description}</p>
</div>
