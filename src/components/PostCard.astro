---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

const { article } = Astro.props;

interface Props {
  article: CollectionEntry<"blog">;
}
---

<div class="bg-white rounded-lg shadow-lg max-w-md border border-gray-300">
  <a href={"/blog/" + article.slug}>
    <Image
      src={`/images/${article.data.cover}`}
      alt="Article Image"
      width={400}
      height={300}
      class="rounded-xl"
    />
  </a>
  <div class="p-3">
    <h2 class="text-2xl font-semibold mb-2">
      <a href={"/blog/" + article.slug}> {article.data.title} </a>
    </h2>
    <p class="text-gray-600 text-sm mb-4">{article.data.publishedAt}</p>
  </div>
</div>
