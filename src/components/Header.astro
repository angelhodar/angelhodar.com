---
import { Icon } from "astro-icon/components";
---

<nav class="flex justify-between items-center">
  <a href="/" aria-label="Logo">
    <Icon name="logo" class="w-16 h-16 fill-black dark:fill-white" />
  </a>
  <div class="flex space-x-6 items-center">
    <a href="/" class="hover:underline">Portfolio</a>
    <a href="/blog" class="hover:underline">Blog</a>
  </div>
  <button
    id="theme-toggle-button"
    type="button"
    class="text-muted border border-gray-300 rounded-xl text-sm p-2 inline-flex items-center"
    aria-label="Toggle between Dark and Light mode"
    data-toggle-color-scheme
  >
    <Icon name="sun" class="w-6 h-6" />
  </button>
</nav>
