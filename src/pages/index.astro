---
import { Icon } from "astro-icon/components";
import Layout from "@/layouts/Layout.astro";
import ProjectCard from "@/components/Resume/ProjectCard.astro";
import Section from "@/components/Section.astro";
import EducationCard from "@/components/Resume/EducationCard.astro";
import WorkPositionCard from "@/components/Resume/WorkPositionCard.astro";
import SkillGroup from "@/components/Resume/SkillGroup.astro";
import Skill from "@/components/Resume/Skill.astro";
---

<Layout
	seo={{
		title: "Portfolio",
		description:
			"My portfolio with projects, education and work over the years",
	}}
	viewTransitions
>
	<main class="flex flex-col space-y-10 antialiased pt-6">
		<h1
			class="text-6xl py-3 font-extrabold bg-clip-text text-transparent bg-gradient-to-l from-yellow-400 to-red-500 dark:from-green-400 dark:to-blue-600 text-center"
		>
			Hi, I'm Angel Hodar
		</h1>

		<Section title="Projects" icon="projects">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<ProjectCard
					title="OpenRPG_Inventory"
					href="https://github.com/angelhodar/OpenRPG_Inventory"
					description="Generic and fully featured inventory container and equipment system for Unreal Engine 4"
				/>
				<ProjectCard
					title="MeshOptimizer"
					href="https://github.com/angelhodar/mesh-optimizer"
					description="Blender based 3D model optimizer for automatic texture compression and polygon reduction. Docker and serverless ready"
				/>
				<ProjectCard
					title="OpenRPG_Stats"
					href="https://github.com/angelhodar/OpenRPG_Stats"
					description="Attributes and stats system for Unreal Engine 4"
				/>

				<ProjectCard
					title="ReceiptsGPT"
					href="https://github.com/angelhodar/receipts-gpt"
					description="Make restaurants shared payments easier by using AI driven OCR models"
				/>
				<ProjectCard
					title="OpenRPG_Quest"
					href="https://github.com/angelhodar/OpenRPG_Quest"
					description="Multipurpose quest system for Unreal Engine 4"
				/>
				<ProjectCard
					title="angelhodar.com"
					href="https://github.com/angelhodar/angelhodar.com"
					description="My personal portfolio using the Astro framework"
				/>
			</div>
		</Section>

		<Section title="Skills" icon="skills">
			<div class="flex flex-col space-y-8">
				<SkillGroup name="Frontend">
					<Skill icon="devicon:javascript" name="JavaScript" />
					<Skill icon="devicon:typescript" name="TypeScript" />
					<Skill icon="devicon:react" name="React" />
					<Skill icon="devicon:vuejs" name="Vue" />
					<Skill icon="devicon:tailwindcss" name="Tailwind" />
					<Skill icon="devicon:nextjs" name="NextJS" />
					<Skill icon="devicon:nuxtjs" name="Nuxt" />
					<Skill
						icon="devicon:astro"
						name="Astro"
						class="fill-black dark:fill-white"
					/>
				</SkillGroup>

				<SkillGroup name="Backend">
					<Skill icon="devicon:nodejs" name="Node" />
					<Skill icon="devicon:python" name="Python" />
					<Skill icon="devicon:cplusplus" name="C++" />
					<Skill icon="devicon:csharp" name="C#" />
					<Skill icon="graphql" name="GraphQL" />
					<Skill icon="devicon:docker" name="Docker" />
				</SkillGroup>

				<div class="flex flex-col lg:flex-row gap-5">
					<div class="grow">
						<SkillGroup name="Cloud">
							<Skill icon="aws" name="AWS" />
							<Skill
								icon="devicon:digitalocean"
								name="DigitalOcean"
							/>
							<Skill
								icon="devicon:vercel"
								name="Vercel"
								class="fill-black dark:fill-white"
							/>
							<Skill icon="devicon:firebase" name="Firebase" />
							<Skill icon="devicon:supabase" name="Supabase" />
						</SkillGroup>
					</div>
					<div class="grow">
						<SkillGroup name="Databases">
							<Skill icon="devicon:postgresql" name="Postgres" />
							<Skill icon="devicon:mongodb" name="MongoDB" />
						</SkillGroup>
					</div>
					<div class="grow">
						<SkillGroup name="Graphics">
							<Skill
								icon="devicon:unity"
								name="Unity"
								class="fill-black dark:fill-white"
							/>
							<Skill
								icon="devicon:unrealengine"
								name="Unreal Engine"
								class="fill-black dark:fill-white"
							/>
						</SkillGroup>
					</div>
				</div>
			</div>
		</Section>

		<Section title="Experience" icon="work">
			<div class="flex flex-col gap-10">
				<WorkPositionCard
					title="Full Stack Leader"
					href="https://fuelyourbrands.com/"
					startDate="June 2022"
					location="Fuel Your Brands, Madrid"
					description="At Fuel I took the development leadership of their product, a platform to connect brands with microinfluencers in social networks. I developed new features across the entire tech stack, internal tools to boost productivity and cost optimization in all the services "
				>
					<Icon name="devicon:nextjs" class="w-8 h-8" />
					<Icon name="graphql" class="w-8 h-8" />
					<Icon name="devicon:nodejs" class="w-8 h-8" />
					<Icon name="devicon:typescript" class="w-8 h-8" />
					<Icon name="aws" class="w-8 h-8" />
					<Icon name="devicon:mongodb" class="w-8 h-8" />
					<Icon name="devicon:docker" class="w-8 h-8" />
					<Icon
						name="devicon:vercel"
						class="w-8 h-8 fill-black dark:fill-white"
					/>
					<Icon name="devicon:tailwindcss" class="w-8 h-8" />
				</WorkPositionCard>

				<WorkPositionCard
					title="Software Engineer"
					href="https://www.fidesol.org/"
					startDate="May 2020"
					endDate="June 2022"
					location="Fidesol, Granada"
					description="Worked as VR programmer creating experiences with the Unity game engine. I also developed the platform where the VR devices connected to, using React and NodeJS"
				>
					<Icon name="devicon:react" class="w-8 h-8" />
					<Icon name="devicon:javascript" class="w-8 h-8" />
					<Icon name="devicon:nodejs" class="w-8 h-8" />
					<Icon name="devicon:csharp" class="w-8 h-8" />
					<Icon
						name="devicon:unity"
						class="w-8 h-8 fill-black dark:fill-white"
					/>
					<Icon name="devicon:docker" class="w-8 h-8" />
					<Icon name="devicon:mongodb" class="w-8 h-8" />
				</WorkPositionCard>
				<WorkPositionCard
					title="Software Engineer Intern"
					href="https://www.fidesol.org/"
					startDate="Feb 2020"
					endDate="May 2020"
					location="Fidesol, Granada"
					description="In my internship I helped in the development of virtual reality experiences for clients, preparing new assets to use, including the interaction code, on-demand delivery and the improvements of the internal tools used to develop the experiences."
				>
					<Icon name="devicon:csharp" class="w-8 h-8" />
					<Icon
						name="devicon:unity"
						class="w-8 h-8 fill-black dark:fill-white"
					/>
				</WorkPositionCard>
			</div>
		</Section>

		<Section title="Education" icon="education">
			<EducationCard
				title="Computer Science Bachelor"
				href="https://etsiit.ugr.es/"
				startDate="Sep 2016"
				endDate="Jun 2020"
				location="Escuela Técnica Superior de Ingeniería Informática y Telecomunicaciones, Granada"
			/>
		</Section>
	</main>
</Layout>
